/* ie 6/7 */

.clearfix {
	*zoom: 1;
	*height: 1px;
}


/* IE8+ */

.clearfix:after {
	content: "";
	height: 0;
	clear: both;
	display: block;
	visibility: hidden;
}

.nav {
	width: 1190px;
	border-top: 1px solid #000;
	border-bottom: 1px solid #000;
	margin: 0 auto;
}

.nav> p {
	line-height: 40px;
	margin-top: 10px;
	margin-left: 15px;
}

.nav> span {
	margin-left: 5px;
	font-size: 12px;
	display: inline-block;
	float: left;
	width: 100px;
	height: 40px;
	text-align: center;
	line-height: 40px;
	padding: 10px 0;
	cursor: pointer;
}

.nav> span.cur {
	color: red;
}

.shoplist {
	width: 1190px;
	display: block;
	margin: 0 auto;
	padding-left: 5px;
	margin-top: 40px;
}

.shoplist> li {
	width: 228px;
	height: 400px;
	border: 1px solid #d1d1d1;
	text-align: center;
	float: left;
	margin-right: 8px;
	margin-bottom: 10px;
}

.shoplist> li img {
	margin-top: 50px;
	width: 228px;
	height: 200px;
	display: inline-block;
}

.shoplist .jiage {
	width: 100%;
	height: 20px;
	color: red;
	margin-top: 25px;
}

.shoplist .quxiangqing {
	width: 100%;
	height: 20px;
	margin-top: 25px;
}